{
  "name": "digital-collections-style-guide",
  "version": "1.0.0",
  "description": "A workshop repo to design and develop the details of the digital collections front-end. ",
  "main": "index.js",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@umich-lib/components": "^1",
    "@xmldom/xmldom": "^0.8.1",
    "esbuild": "^0.14.23",
    "express-http-proxy": "^1.6.3",
    "get-all-files": "^4.1.0",
    "md5": "^2.3.0",
    "xpath": "^0.0.32",
    "yargs": "^17.3.1",
    "zx": "^5.2.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx @11ty/eleventy",
    "develop": "npx @11ty/eleventy --serve",
    "start": "npm run develop",
    "build-js": "npx esbuild --bundle src/js/image/*.js --outdir=dist --outbase=src --target=es2015",
    "watch-js": "npx esbuild --bundle src/js/image/*.js --outdir=dist --outbase=src --target=es2015 --watch",
    "build-xml": "./samples/scripts/transform-xml-qui.mjs && ./samples/scripts/transform-qui-qbat.mjs && ./samples/scripts/build-indexes.mjs",
    "proxy": "./samples/scripts/serve.mjs",
    "release": "rsync -av --exclude=node_modules --exclude=.git . quod-update:/quod/web/digital-collections-style-guide"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlibrary/digital-collections-style-guide.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mlibrary/digital-collections-style-guide/issues"
  },
  "homepage": "https://github.com/mlibrary/digital-collections-style-guide#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "serve-static": "^1.13.2",
    "tocbot": "^4.18.2"
  }
}
